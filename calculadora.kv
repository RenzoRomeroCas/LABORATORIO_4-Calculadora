<CustomButton@Button>:
    font_size: "32sp"
    bold: True
    color: (1, 1, 1, 1)
    background_normal: ""
    background_color: (0.1, 0.6, 0.8, 1)  # Celeste por defecto

<Calculadora>:
    orientation: "vertical"
    spacing: 10
    padding: 15

    BoxLayout:
        size_hint_y: 0.3
        TextInput:
            id: pantalla
            font_size: "48sp"
            halign: "right"
            valign: "middle"
            readonly: True
            multiline: False
            text: ""
            background_color: (0, 0, 0, 1)
            foreground_color: (1, 1, 1, 1)

    GridLayout:
        cols: 4
        spacing: 10
        size_hint_y: 0.7

        CustomButton:
            text: "7"
            on_press: root.presionar(self)
        CustomButton:
            text: "8"
            on_press: root.presionar(self)
        CustomButton:
            text: "9"
            on_press: root.presionar(self)
        CustomButton:
            text: "/"
            on_press: root.presionar(self)

        CustomButton:
            text: "4"
            on_press: root.presionar(self)
        CustomButton:
            text: "5"
            on_press: root.presionar(self)
        CustomButton:
            text: "6"
            on_press: root.presionar(self)
        CustomButton:
            text: "*"
            on_press: root.presionar(self)

        CustomButton:
            text: "1"
            on_press: root.presionar(self)
        CustomButton:
            text: "2"
            on_press: root.presionar(self)
        CustomButton:
            text: "3"
            on_press: root.presionar(self)
        CustomButton:
            text: "-"
            on_press: root.presionar(self)

        CustomButton:
            text: "C"
            background_color: (1, 0.3, 0.3, 1)  # Rojo
            on_press: root.presionar(self)
        CustomButton:
            text: "0"
            on_press: root.presionar(self)
        CustomButton:
            text: "="
            background_color: (0.3, 1, 0.3, 1)  # Verde
            on_press: root.calcular()
        CustomButton:
            text: "+"
            on_press: root.presionar(self)